<div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="menu-sidebar" role="navigation">
	<ul class="nav" id="page-sidebar" style="margin-bottom:30px;">
	  <% if @page.has_parent? %>
	  	  <% parent = @page.ancestors.first %>
	  	  <% parent.pages.active.order('display_order ASC').each do |page| %>
	  	  <li class="<%= page == @page ? 'active': '' %>"><%= link_to page.page_title, pages_path(page.page_url), title: page.page_title %></li>
		  <% end %>
	  <% else %>
	  	<% Page.sections.each do |page| %>
	  	  <li class="<%= page == @page ? 'active': '' %>"><%= link_to page.page_title, pages_path(page.page_url), title: page.page_title %></li>
		  <% end %>
	  <% end %>
	</ul>
	<div id="fb-sidebar-widget" class="fb-like-box" data-href="https://www.facebook.com/pages/Mariveles-Water-District/1553420708222422" data-width="100%	" data-height="" data-colorscheme="light" data-show-faces="true" data-header="true" data-stream="true" data-show-border="true"></div>
</div>
