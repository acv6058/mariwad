<div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
	<ul class="nav">
	  <% if @page.has_parent? %>
	  	  <% parent = @page.ancestors.first %>
	  	  <% parent.pages.active.each do |page| %>
	  	  <li class="<%= page == @page ? 'active': '' %>"><%= link_to page.page_title, pages_path(page.page_url), title: page.page_title %></li>
		  <% end %>
	  <% else %>
	  	<% Page.sections.each do |page| %>
	  	  <li class="<%= page == @page ? 'active': '' %>"><%= link_to page.page_title, pages_path(page.page_url), title: page.page_title %></li>
		  <% end %>
	  <% end %>
	</ul>
</div>